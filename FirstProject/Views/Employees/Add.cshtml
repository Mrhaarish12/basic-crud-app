@model FirstProject.Models.AddEmployeeViewModelcs
@{
}

<form method="post" action="Add">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Enter name" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" placeholder="Enter email" asp-for="Email">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Salary</label>
        <input type="number" class="form-control" id="salary" placeholder="Enter salary" asp-for="Email">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Date of birth</label>
        <input type="date" class="form-control" id="dobinput" placeholder="Enter date of birth" asp-for="DateOfBirth">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Department</label>
        <input type="text" class="form-control" id="department" placeholder="Enter department" asp-for="DateOfBirth">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>